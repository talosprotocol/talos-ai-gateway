{
  "schema_id": "talos.gateway.surface_registry",
  "schema_version": "v1",
  "routes": [
    {
      "method": "POST",
      "path_template": "/v1/chat/completions",
      "permission": "ai:chat",
      "scope_template": {
        "scope_type": "global",
        "attributes": {}
      }
    },
    {
      "method": "GET",
      "path_template": "/v1/secrets/{secret_id}",
      "permission": "secrets:read",
      "scope_template": {
        "scope_type": "secret",
        "attributes": {
          "secret_id": "{secret_id}"
        }
      }
    },
    {
      "method": "POST",
      "path_template": "/v1/secrets",
      "permission": "secrets:write",
      "scope_template": {
        "scope_type": "global",
        "attributes": {}
      }
    },
    {
      "method": "GET",
      "path_template": "/health/live",
      "permission": "system:health",
      "scope_template": {
        "scope_type": "global",
        "attributes": {}
      },
      "public": true
    },
    {
      "method": "GET",
      "path_template": "/metrics",
      "permission": "system:metrics",
      "scope_template": {
        "scope_type": "global",
        "attributes": {}
      },
      "public": true
    }
  ]
}
